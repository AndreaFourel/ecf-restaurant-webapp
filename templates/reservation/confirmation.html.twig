{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}


{% block body %}
    <main class="py-3 container-fluid">
        <section class="m-auto mt-3">
            <article class="mt-5">
                <h2 class="blue-title text-center py-2 py-md-3 mb-md-3">Votre reservation a bien été enregistrée!</h2>
                <h3 class="blue-title text-center py-2 py-md-3 mb-md-3">Le chef Râ des Goûts et sa brigade vous remercient!</h3>
                <div class="d-flex justify-content-center my-5">
                    <div>
                        {% if app.user %}
                            <p class="reservation-txt text-center py-2 py-md-3 mb-md-3">Contents de vous revoir
                                {% if app.user.firstName %}
                                    {{ app.user.firstName }}!
                                {% else %}
                                    {{ app.user.email }}!</p>
                                {% endif %}

                        {% else %}
                            <h2 class="blue-title  mb-5">Conseils du chef:</h2>
                            <p class="reservation-txt">Pour faciliter vos prochaines réservations, connectez-vous à votre compte.</p>
                            <p class="reservation-txt">Si vous n'avez pas encore un compte, suivez le lien ci-dessous:</p>
                            <a type="submit" class="btn btn-sm btn-form mt-5" href="{{ path('app_register') }}">Créer un compte</a>
                        {% endif %}
                </div>

            </article>
        </section>
    </main>

{% endblock %}