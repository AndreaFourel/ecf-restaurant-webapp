{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <section class="container-fluid user-action py-5 px-4 d-flex justify-content-center">
        <div class="container user-form">
            <h2 class="mb-5 form-title">Changer le mot de passe</h2>

            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>
                    Indiquez votre adresse Email et nous vous enverrons un lien
                    pour proc√©der au changement du mot de passe.
                </small>
            </div>

            <button class="btn btn-lg btn-form my-3 mt-5">Envoyez moi le lien</button>
            {{ form_end(requestForm) }}
        </div>
    </section>

{% endblock %}
