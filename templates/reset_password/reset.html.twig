{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe{% endblock %}

{% block body %}
    <section class="container-fluid user-action py-5 px-4 d-flex justify-content-center">
        <div class="container user-form">
            <h2 class="ms-3 mb-4 form-title">Changez votre mot de passe</h2>
            <div class="mt-3 p-3">
                {{ form_start(resetForm) }}
                {{ form_row(resetForm.plainPassword) }}
                <button class="btn btn-lg btn-form my-3 mt-5">Changer le mot de passe</button>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </section>

{% endblock %}
