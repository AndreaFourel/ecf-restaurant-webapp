<div class="container-fluid">
    <div class="d-flex justify-content-evenly">
        <div class="schedule mt-4 p-3">
            <h4 class="my-3 py-3">Horraires d'ouverture: </h4>
            {% for day in weekDays %}
                <div class="schedule-wrapper d-flex justify-content-between">
                    <div class="px-1">
                        {{ day.title }}:
                    </div>
                    <div class="px-1">
                        {% if day.open %}
                            {% for daySchedule in dailySchedule %}
                                {% if day.title in daySchedule.weekDays %}
                                    <p>{{ daySchedule.openingTime|date('H:i') }} - {{ daySchedule.closingTime|date('H:i') }}</p>
                                {% endif%}
                            {% endfor%}
                        {% else %}
                            <p>Fermé</p>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="d-flex justify-content-center mt-4 p-3">
            <div class="d-flex align-items-start flex-column mb-3">
                <div class="mb-auto">
                    <h4 class="m-3 py-3">La Bouche D Gouts</h4>
                    <adress class="m-3 py-3">{{ address.value }}</adress>
                    <p class="m-3 py-3">{{ phoneNumber.value }}</p>

                </div>
                <div class="p-2">
                    <a class="social-link mx-3 px-3 text-decoration-none" href="">
                        <i class="bi bi-facebook"></i>
                    </a>
                    <a class="social-link mx-3 px-3 text-decoration-none" href="">
                        <i class="bi bi-instagram"></i>
                    </a>
                    <a class="social-link mx-3 px-3 text-decoration-none" href="">
                        <i class="bi bi-envelope"></i>
                    </a>
                    <a class="social-link mx-3 px-3 text-decoration-none" href="tel:+33{{ phoneNumber.value }}">
                        <i class="bi bi-phone"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="d-flex align-items-start flex-column mb-3">
            <ul class="list-group-flush mb-auto mt-4 p-3">
                <h4 class="my-3 py-3">Liens:</h4>
                <li class="list-group-item my-2 py-2">
                    <a class="simple-link" href="{{ path('app_homepage') }}">Page d'accueil</a>
                </li>
                <li class="list-group-item my-2 py-2">
                    <a class="simple-link" href="#">Carte & Menus</a>
                </li>
                {% if is_granted('ROLE_USER') %}
                    <li class="list-group-item my-2 py-2">
                        <a class="simple-link" href="#">Mon compte</a>
                    </li>
                {% endif %}

            </ul>
            <p class="mentions-legales mx-3 px-3"><a class="simple-link" href="#">Mentions légales</a></p>
            <p class="copyright mx-3 px-3">Design&Dev <a class="simple-link" href="https://www.linkedin.com/in/andr%C3%A9a-fourel-1a3812109/">Andréa Fourel</a></p>
        </div>
    </div>


</div>
