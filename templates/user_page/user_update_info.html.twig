{% extends 'base.html.twig' %}

{% block title %}Modifier mon compte{% endblock %}

{% block body %}
    <main>
        <section class="container-fluid user-action py-5 px-4 d-flex justify-content-center">
            <div class="container user-form">
                <h2 class="ms-3 mb-4 form-title">Mise à jour de mes informations</h2>
                <div class="mt-3 p-3">
                    {{ form_start(userUpdateForm) }}
                    {{ form_row(userUpdateForm.firstName, {
                        label: 'Prénom'
                    }) }}
                    {{ form_row(userUpdateForm.allergyList, {
                        label: 'Allergies alimentaire connues (pour vous et vos convives)'
                    }) }}
                    {{ form_row(userUpdateForm.guestQuantity, {
                        label: 'Nombre habituel de convives'
                    }) }}

                    <button type="submit" class="btn btn-lg btn-form my-3 mt-5">Mettre à jour</button>
                    {{ form_end(userUpdateForm) }}
                </div>
            </div>
        </section>
    </main>
{% endblock %}