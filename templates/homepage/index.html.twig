{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>

    {% if app.user %}
        Welcome {{ app.user.email }}
        <a type="submit" class="btn btn-primary" href="{{ path('app_logout') }}">Se deconnecter</a>
        <a type="submit" class="btn btn-primary" href="{{ path('admin') }}">Administration</a>

    {% else %}
        <a type="submit" class="btn btn-primary" href="{{ path('app_login') }}">Se connecter</a>
        <a type="submit" class="btn btn-primary" href="{{ path('app_register') }}">S'inscrire</a>
    {% endif %}
</div>
{% endblock %}
